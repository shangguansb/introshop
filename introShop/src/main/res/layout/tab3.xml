<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dip"
        android:background="#FFFFFF">

        <Button
            android:id="@+id/Button_Setting"
            android:layout_width="26.5dip"
            android:layout_height="26.5dip"
            android:layout_marginLeft="320dip"
            android:layout_marginTop="10dip"
            android:alpha="0.5"
            android:background="@drawable/setting" />
    </LinearLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:scrollbars="none">

        <LinearLayout
            android:id="@+id/contain"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="210dip">

                    <ImageView
                        android:id="@+id/id_back"
                        android:layout_width="750dip"
                        android:layout_height="750dip"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="-60dip"
                        android:src="@drawable/id_rainbowa" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:orientation="vertical">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/avater"
                            android:layout_width="100dip"
                            android:layout_height="100dip"
                            android:background="@drawable/register"
                            android:transitionName="avatartrans" />

                        <TextView
                            android:id="@+id/logintext"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="5dip"
                            android:text="注册/登陆"
                            android:textColor="@color/white"
                            android:textSize="20sp" />
                    </LinearLayout>

                </FrameLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dip"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="40dip"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dip"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <RadioGroup
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_horizontal"
                        android:gravity="center_horizontal"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/radio0"
                            android:layout_width="85dip"
                            android:layout_height="30dip"
                            android:background="@drawable/tab3_radio_button1_selector"
                            android:button="@null"
                            android:checked="true"
                            android:gravity="center"
                            android:padding="0dip"
                            android:text="收藏"
                            android:textColor="@android:color/tertiary_text_dark"
                            android:textSize="15sp" />

                        <RadioButton
                            android:id="@+id/radio1"
                            android:layout_width="85dip"
                            android:layout_height="30dip"
                            android:background="@drawable/tab3_radio_button2_selector"
                            android:button="@null"
                            android:gravity="center"
                            android:padding="0dip"
                            android:text="购物车"
                            android:textColor="@android:color/tertiary_text_dark"
                            android:textSize="15sp" />

                        <RadioButton
                            android:id="@+id/radio2"
                            android:layout_width="85dip"
                            android:layout_height="30dip"
                            android:background="@drawable/tab3_radio_button3_selector"
                            android:button="@null"
                            android:gravity="center"
                            android:padding="0dip"
                            android:text="历史记录"
                            android:textColor="@android:color/tertiary_text_dark"
                            android:textSize="15sp" />

                        <RadioButton
                            android:id="@+id/radio3"
                            android:layout_width="85dip"
                            android:layout_height="30dip"
                            android:background="@drawable/tab3_radio_button4_selector"
                            android:button="@null"
                            android:gravity="center"
                            android:padding="0dip"
                            android:text="账户"
                            android:textColor="@android:color/tertiary_text_dark"
                            android:textSize="15sp" />
                    </RadioGroup>


                </LinearLayout>


            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>